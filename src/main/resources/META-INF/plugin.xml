<idea-plugin>
    <id>dev.nocalhost.nocalhost-intellij-plugin</id>
    <name>Nocalhost</name>
    <vendor url="https://nocalhost.dev/">Nocalhost</vendor>

    <description>
        <![CDATA[
        <html>
            <p>Nocalhost is Cloud Native Development Environment. </p>
            <p>This is a Intellij plugin for nocalhost to help connect IDE and Kubernetes smoothly.</p>
        </html>
        ]]>
    </description>

    <change-notes>
        <![CDATA[
        <html>
            <p>initialize repo</p>
        </html>
        ]]>
    </change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <applicationService serviceImplementation="dev.nocalhost.plugin.intellij.TestService" />

        <toolWindow id="Nocalhost" anchor="right"
                    factoryClass="dev.nocalhost.plugin.intellij.ui.NocalhostWindowFactory" />
        <toolWindow id="Nocalhost Console" anchor="bottom"
                    factoryClass="dev.nocalhost.plugin.intellij.ui.NocalhostConsoleWindowFactory" />
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <group id="Nocalhost.Toolbar">
            <separator />
        </group>

        <action id="Nocalhost.Refresh" text="Refresh"
                class="dev.nocalhost.plugin.intellij.ui.action.RefreshAction">
            <add-to-group group-id="Nocalhost.Toolbar" anchor="first"/>
        </action>
        <action id="Nocalhost.Settings" text="Settings"
                class="dev.nocalhost.plugin.intellij.ui.action.SettingsAction">
            <add-to-group group-id="Nocalhost.Toolbar" anchor="last"/>
        </action>
    </actions>
</idea-plugin>